<div id="tool_container">
    <div class="panel" id="viewport_settings">
        <h2>Viewport Settings</h2>
        <form id="viewport_settings_form">
            <div class="viewport_settings_form_card">

                <label class="switch">
                    <input id="viewportLock" type="checkbox" checked>
                    <span class="slider"></span>
                </label>

                <label for="viewportLock">Lock Viewport</label>
            </div>

            <div class="viewport_settings_form_card">
                <input id="viewportRotateSpeed" type="range"   min="0.01" max="0.25" value="0.075" step="0.025">
                <label for="viewportRotateSpeed">Rotate speed</label>
            </div>

            <div class="viewport_settings_form_card">
                <input   id="viewportMoveSpeed" type="range"     min="0.01" max="0.5" value="0.05" step="0.01">
                <label for="viewportMoveSpeed">Move speed</label>
            </div>

            <div class="viewport_settings_form_card">
                <input   id="viewportZoomSpeed" type="range"     min="1" max="30" value="5" step="0.5">
                <label for="viewportZoomSpeed">Zoom speed</label>
            </div>

            {{#each palette_viewport}}
                {{> materialCard}}
            {{/each}}

        </form>
    </div>

    <div class="panel" id="viewport">
        <canvas id="application-canvas" width="800" height="600"></canvas>
    </div>

    <div class="panel" id="text_editor">
        <h2>Text Editor</h2>
        <br>
        <textarea id="text_editor_textarea" wrap="off" cols="" rows="">1</textarea><br>
    </div>

    <div class="panel" id="material_settings">
        <h2>Material Settings</h2>

        <div id="material_settings_container">

            {{#each palette_materials}}
                {{> materialCard}}
            {{/each}}

        </div>
    </div>

    <div class="panel" id="project_options">

        <h2>Project Settings</h2>
        <div class="project-setting-contents">
            <input id="projectDownloads" value="{{downloads}}" hidden>
            <h2 id="project-title-h2">Title: <span id="projectTitle">{{title}}</span></h2>
            <button onclick="renameProject()" id="rename-project-button">Rename Project</button>
            <div class="project-setting-divider"></div>

            <label id="project-description-label">Describe your project</label>
            <textarea id="projectDescription">{{description}}</textarea>
            <div class="project-setting-divider"></div>

            <label class="project-setting-tag-title">Tags</label><i class="fa fa-tag"></i>
            <div id="projectLabelsContainer">
                {{#each tags}}
                    {{> labelCheckbox}}
                {{/each}}
            </div>
            <div class="project-setting-divider"></div>

            <label for="file-selector" id="upload-plan-file-label">Upload a .plan file</label>
            <input type="file" id="file-selector" accept=".plan">
            <div class="project-setting-divider"></div>

            <input id="projectID" value="{{projectID}}" hidden>
            <input type="file" id="thumbnail" hidden>
            <div class="publish-and-download-button">
                <input type="submit" id="postProject" value="Publish Project">
                <button onclick="downloadChanges()" id="download-changes-button">Download Changes</button>
            </div>
        </div>
    </div>
</div>

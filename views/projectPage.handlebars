<img src="/project/{{projectID}}.png">
<h1>{{title}}</h1>
<p>{{description}}</p>
<div class="labels">
    {{#each tags}}
        <span>{{> label}}</span>
    {{/each}}
</div>
<div><a href="../edit/{{projectID}}">Remix this project</a></div>
<div>Downloaded {{downloads}} times</div>
<div>
    <span id="clipboard_value">{{projectID}}</span>
    <button id="clipboard_button" value="Copy ID">
    </button>
</div>
{{#if parentProjectID}}
    <div>
        <a href="../projects/{{parentProjectID}}">Parent project: {{parentProjectID}}</a>
    </div>
{{/if}}